<div id="links">
	<a href="/">Home page</a>   <a class="right" href="/about">About</a> 
</div>
<div id="content">
	<div id="notes">
		<h2>
		   <span class="topic"><%= params[:topic].humanize %></span> <span class="category"><%= params[:category].humanize %></span>			
		</h2>
		<% content.each do |k,v|  %>
			<div class="listitem"><div class="content">
			<h2>
				<%= notes_link(params,k,v[:title]) %>
			</h2>
			<p>
				<%= markdown(v[:content][0..200]).shortened_html %>
			</p>
			<p>
				<% v[:links] %>
			</p>
			</div></div>
		<% end %>
	</div>
</div>