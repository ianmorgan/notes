<div id="links">
	<a href="/">Home page</a> 	<a class="right" href="/about">About</a> 
</div>
<div id="content">
<div id="about">
	<h2>About this site</h2>
	<p>
	This is my personal site for keeping track 
	of all those little snippets of information I keep forgetting
	</p>
	
	<p>
    Everything is on <a href="http://github.com/ianmorgan/notes">Github</a>
	</p>
	
</div>

<table class="topgrid">
<% grid_keys.each do |row| %>
	<tr>
		<% row.each do |col| %>
			<td>
				<span><%= col  %></span>
				<% topic = topics[col] %>
				<ul>
					<% topic.each do |category| %>
						<li><a href="<%="/notes/#{col.downcase}/#{category.downcase}"%>"><%="#{category}"%></a></li>
					<%  end  %>
				</ul>
			</td>
		<% end  %>
		
	</tr>
<% end %>
</table>
</div>