
<div class="row">
	<div class="span12">
		<div id="menu"> 
			<ul>
				<li class="active"><a href="/">Home page</a></li>
				<li><a class="right" href="/about">About</a> </li>					
			 </ul>
		</div>
	</div>	
</div>

<div class="row">

	<div class="span8">
		<div id="content">
			
			<div id="about">
				<h2>About this site</h2>
				<p>
				This is my personal site for keeping track 
				of all those little snippets of information I keep forgetting
				</p>

				<p>
			    Everything is on <a href="http://github.com/ianmorgan/notes">Github</a>
				</p>

			
			</div>
			<% grid_keys.each do |row| %>
				<div class="row topics">
					<% row.each do |col| %>
						<div class="span3">
							<h3 class="topic"><%= col  %> </h3>
							<% topic = topics[col] %>
							<ul>
								<% topic.each do |category| %>
									<li><a href="<%="/notes/#{col.underscore}/#{category.underscore}"%>"><%="#{category}"%></a></li>
								<%  end  %>
							</ul>
						</div>
					<% end  %>
				</div>
			<% end %>		
		</div>

</div>
</div>
<div id="content">


</div>